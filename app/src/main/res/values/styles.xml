<resources>

    <!-- Day -->

    <style name="DayTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Check-In -->

    <style name="CheckInTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Settings -->

    <style name="SettingsGroup">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsGroupHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SettingsGroupRow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">17sp</item>
    </style>

        <style name="SettingsItem.Label" parent="SettingsItem">
            <item name="android:gravity">center_vertical|start</item>
        </style>

        <style name="SettingsItem.Spacer" parent="SettingsItem">
            <item name="android:layout_weight">1</item>
        </style>

        <style name="SettingsItem.Value" parent="SettingsItem">
            <item name="android:gravity">center_vertical|end</item>
        </style>

</resources>
